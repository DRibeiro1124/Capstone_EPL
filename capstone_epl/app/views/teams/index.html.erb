<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Home kit</th>
      <th>Away kit</th>
      <th>Third kit</th>
      <th>Lead partner logo</th>
      <th>Club partner logo</th>
      <th>Stadium</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><img src="<%= team.home_kit %>" class="kit"/></td>
        <td><img src="<%= team.away_kit %>" class="kit"></td>
        <td><img src="<%= team.third_kit %>" class="kit"></td>
        <td><img src="<%= team.lead_partner_logo %>" class="sponsor"></td>
        <td><img src="<%= team.club_partner_logo %>" class="sponsor"></td>
        <td><img src="<%= team.stadium %>" class="stadium"></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

