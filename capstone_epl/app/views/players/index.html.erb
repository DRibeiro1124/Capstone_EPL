<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Club</th>
      <th>Position</th>
      <th>Full Name</th>
      <th>Nationality</th>
      <th>Jersey Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr class="container">
        <td><img src="<%= player.photo %>" class="player"/></td>
        <td><img src="<%= player.team %>" class="team-logo"/></td>
        <td><%= player.position %></td>
        <td><%= player.full_name %></td>
        <td><img src="<%= player.country %>" class="flag"/></td>
        <td><%= player.jersey_number %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

